@model PartEditModel

@{
    ViewData["Title"] = "Edit Part";
}

<h2 style="margin-left: 100px">@ViewData["Title"]</h2>

<form method="post" class="form-horizontal" style="margin-top: 40px">
    <div class="form-group">
        <label asp-for="Price" class="col-sm-1 control-label">Price</label>
        <div class="col-sm-4">
            <input type="text" asp-for="Price" class="form-control" placeholder="Price" value="@(Model?.Price)">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="col-sm-1 control-label">Quantity</label>
        <div class="col-sm-4">
            <input type="number" asp-for="Quantity" class="form-control" placeholder="Quantity" value="@(Model?.Quantity)">
            <span asp-validation-for="Quantity" class="form-text text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-success">Edit Part</button>
        </div>
    </div>
</form>