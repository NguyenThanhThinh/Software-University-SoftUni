@model UsersListingViewModel

@{
    ViewData["Title"] = "All users";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.UsersListing)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <form method="post" asp-controller="Users" asp-action="AddToRole">
                        <div class="row">
                            <div class="col-md-8">
                                <select name="Role" asp-items="@Model.Roles" class="form-control"></select>
                                <br />
                                <input type="hidden" name="UserId" value="@user.Id" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-sm btn-primary">Add To Role</button>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>