@model SearchViewModel

@{
    ViewData["Title"] = $"Search results for ''{Model.SearchText}''";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Courses.Any())
{
    <h3>Courses</h3>

    <div class="row course-listing">
        @await Html.PartialAsync("_CourseListingPartial", @Model.Courses)
    </div>
}
else
{
    <h3>No courses to show.</h3>
}

@if (Model.Users.Any())
{
    <h3>Users</h3>

    <ul>
        @foreach (var user in Model.Users)
        {
            <li>
                <a asp-controller="Users" asp-action="Profile" asp-route-username="@user.Username">@user.Username</a>
            </li>
        }
    </ul>
}
else
{
    <h3>No users to show.</h3>
}