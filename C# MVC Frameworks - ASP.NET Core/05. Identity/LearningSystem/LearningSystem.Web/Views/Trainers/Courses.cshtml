@model IEnumerable<CourseListingInfoServiceModel>

@{
    ViewData["Title"] = $"Courses";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.StartDate</td>
                <td>@course.EndDate</td>
                <td>
                    <a asp-area="" asp-controller="Trainers" asp-action="Students" asp-route-courseId="@course.Id" class="btn btn-primary">Students</a>
                </td>
            </tr>
        }
    </tbody>
</table>